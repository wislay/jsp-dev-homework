<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.hs.Student">
        <id name="studentNo">
            <generator class="assigned"></generator>
        </id>
        <property name="studentName" not-null="true"/>
        <property name="studentGender" not-null="true"/>
        <property name="studentHometown" not-null="true"/>
        <property name="studentBirthday" not-null="true"/>
        <property name="studentNoInClass"/>
        <property name="studentEmail"/>
        <property name="studentMobile"/>
    </class>
</hibernate-mapping>
